generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  passwordHash String
  refreshTokens RefreshToken[]
}

model Target {
  id Int @id @default(autoincrement())
  name String
  url String @unique
  intervalSeconds Int
}

model RefreshToken {
  id Int @id @default(autoincrement())
  token String @unique
  userId Int
  user User @relation(fields: [userId], references: [id])
  expiresAt DateTime
}